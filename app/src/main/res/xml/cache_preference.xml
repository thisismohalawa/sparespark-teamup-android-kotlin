    <PreferenceCategory>
        <Preference
            android:key="CLEAR CACHE"
            android:title="@string/clear_cache" />
        <Preference
            android:key="RESET CACHE"
            android:title="@string/reset_cache" />
    </PreferenceCategory>
</PreferenceScreen>
