            android:defaultValue="4"
            android:key="COMPANY_CACHE_TIME"
            android:summary="@string/set_max_cache_def4h"
            android:title="@string/company_list" />
        <EditTextPreference
            android:defaultValue="10"
            android:key="NOTE_CACHE_TIME"
            android:summary="@string/main_max_cache_time"
            android:title="@string/notes_list" />
        <EditTextPreference
            android:defaultValue="10"
            android:key="TRANSACTION_CACHE_TIME"
            android:summary="@string/main_max_cache_time"
            android:title="@string/transaction_list" />
        <EditTextPreference
            android:defaultValue="10"
            android:key="STOCK_CACHE_TIME"
            android:summary="@string/main_max_cache_time"
            android:title="@string/stock_list" />
